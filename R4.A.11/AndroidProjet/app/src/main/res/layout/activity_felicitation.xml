<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".gamesActs.math.FelicitationActivity">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FELICITATIONS!!"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/autreOperation_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CHOISIR UNE AUTRE OPERATION" />

    <Button
        android:id="@+id/backMenu_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RETOURNEZ AU MENU" />
</LinearLayout>