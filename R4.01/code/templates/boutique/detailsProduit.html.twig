{% extends 'base.html.twig' %}


{% block body %}
    <div class="card col-md-12">
        <div class="card-header">
            <h3>
                <a class="btn-back text-secondary" href="{{ path('app_boutique') }}">
                    <i class="fas fa-x fa-arrow-circle-left"></i>
                </a>
                <i class="fas fa-store"></i>
            </h3>
        </div>
    </div>
    <div class="card-body row">
            <div class="col-md-4">
                <div class="card clickable" onclick="location = '{{ path('app_panier_ajouter', {'idProduit' : produit.id, 'quantite': 1}) }}'"
                     data-toggle="tooltip" title="Ajouter <b>{{ produit.libelle }}</b> Ã  mon panier" data-placement="bottom"
                     data-html="true" data-container="body">
                    <img src="/{{ produit.visuel }}" class="card-img-produit" alt="{{ produit.libelle }}">
                    <div class="card-body">
                        <h4 class="card-title">{{ produit.libelle }}</h4>
                        <p class="card-text">
                            <i>{{ produit.texte }}</i>
                        </p>
                        <h2>
				<span class="badge badge-primary">
					<i class="fas fa-cart-plus"></i>&nbsp;&nbsp;
                    {{ produit.prix }}
				</span>
                        </h2>
                    </div>
                    {% if app.user %}
                    <a class="btn btn-primary" href="{{ path('app_commentaire_new', {'idProduit' : produit.id} ) }}">
                        Ajouter un commentaire
                    </a>
                    {% endif %}
                </div>
            </div>
    </div>
{% endblock %}