                            <button class="btn btn-primary btn-block">Enregistrer</button>
                            </div>
                        </form>
                        <hr>
                        <div class="col-md-12 text-right">
                            <p>
                                Déjà client ?
                                <a class="btn btn-secondary btn-" type="submit" href="{{ path('app_usager_index') }}">
                                    Connexion
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
                <!-- fin du block body -->
            </div>
        </div>
    </div>
</main>
{% endblock %}

