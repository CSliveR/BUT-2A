{% extends 'base.html.twig' %}

{% block title %}
    Mon compte
{% endblock %}

{% block body %}
    <main role="main" class="container-fluid">
        <div class="row">
            <div class="col-md-10">
                <div class="main-div">
                    <!-- debut du block body -->
                    <div class="card row-md-12">
                        <div class="card-header d-flex justify-content-center align-items-center">
                            <a class="btn-back text-secondary" href="{{ path('app_default_index') }}">
                                <i class="fas fa-2x fa-arrow-circle-left"></i>
                            </a>
                            <h3>Mon Compte</h3>
                        </div>
                        <div class="card-body row">
                            <table class="table">
                                <thead>
                                <tr>
                                    <th>Email</th>
                                    <th>Nom</th>
                                    <th>Prenom</th>
                                    <th>Mes Commandes</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td>{{ email }}</td>
                                    <td>{{ nom }}</td>
                                    <td>{{ prenom }}</td>
                                    <td>
                                        <a class="btn btn-sm btn-primary" href="{{ path('app_usager_commandes') }}">
                                            <span class="badge badge-light">{{ nbCommandes }}</span>
                                            commande(s)
                                        </a>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- fin du block body -->
                </div>
            </div>
        </div>
    </main>
{% endblock %}