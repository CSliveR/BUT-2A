{% extends 'base.html.twig' %}

{% block title %}
    Mes commandes
{% endblock %}

{% block body %}
<main role="main" class="container-fluid">
    <div class="row">
        <div class="col-md-10">
            <div class="main-div">
                <!-- debut du block body -->
                <div class="card col-md-12">
                    <div class="card-header">
                        <a class="btn-back text-secondary" href="{{ path('app_default_index') }}">
                            <i class="fas fa-2x fa-arrow-circle-left"></i>
                        </a>
                        <h3>Commande Passée</h3>
                    </div>
                    <div class="card-body">L'usager {{ prenomUsager }} {{ nomUsager }} a passé la commande n°
                        <span class="badge badge-pill badge-secondary">{{ idCommande }}</span>
                        {{ date | date("d/m/Y à H:i") }}
                        <hr>
                        <a class="btn btn-primary" href="{{ path('app_usager_commandes') }}">
                            Mes commandes
                        </a>
                    </div>
                </div>
                <!-- fin du block body -->
            </div>
        </div>
    </div>
</main>
{% endblock %}